<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@android:color/white">



    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_list_view_id"
            android:contentDescription="@string/image_list_content_description"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" tools:srcCompat="@tools:sample/avatars"/>
    <TextView
            android:id="@+id/title_single_item_list_view_id"
            android:textColor="@android:color/black"
            android:fontFamily="@font/bubbler_one"
            android:text="@string/textview_list_title_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/image_list_view_id" android:layout_marginEnd="242dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/desc_single_item_list_view_id"
            android:textColor="@android:color/black"
            android:fontFamily="@font/bubbler_one"
            android:text="@string/textview_list_version_description"
            android:layout_width="237dp"
            android:layout_height="24dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/title_single_item_list_view_id" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/image_list_view_id" android:layout_marginEnd="42dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

