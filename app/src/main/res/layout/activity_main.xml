<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="138dp"
            android:layout_height="155dp" app:srcCompat="@drawable/carrito_de_compras"
            android:id="@+id/cart_splash_welcome_id"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="156dp" app:layout_constraintBottom_toTopOf="@+id/ecommerce_splash_id"/>
    <TextView
            android:text="@string/splashEcommerceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ecommerce_splash_id"
            android:textSize="38sp"
            android:textColor="#32007A" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:fontFamily="@font/bubbler_one"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="288dp"
            android:layout_marginTop="34dp" app:layout_constraintTop_toBottomOf="@+id/cart_splash_welcome_id"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>
