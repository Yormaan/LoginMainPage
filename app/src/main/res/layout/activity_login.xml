<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".LoginActivity">

    <TextView
            android:text="@string/ecommerceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/login_Ecommerce"
            android:textSize="48sp" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="148dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="117dp"
            android:layout_marginStart="117dp" android:layout_marginEnd="117dp" android:layout_marginRight="117dp"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/background_light"
            app:fontFamily="@font/bubbler_one"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/email_title_id" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="93dp" android:layout_marginStart="93dp" android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/enterEmailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/email_title_id"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="83dp" android:layout_marginStart="83dp"
            android:layout_marginEnd="256dp"
            android:layout_marginRight="256dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/login_Ecommerce"
            android:textColor="@android:color/background_light"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextTextPassword"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/password_title_id" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="93dp" android:layout_marginStart="93dp" android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/enterPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/password_title_id"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="106dp"
            android:layout_marginStart="106dp" android:layout_marginEnd="246dp" android:layout_marginRight="246dp"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/background_light"/>
    <Button
            android:text="@string/loginButtonText"
            android:shape="oval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/colorPrimary"
            android:focusableInTouchMode="false"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textColorHighlight="@android:color/darker_gray" android:shadowColor="#9FA8DA"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" android:soundEffectsEnabled="false"
            android:background="@android:color/white"
            android:singleLine="false"/>

    <TextView
            android:text="@string/forgotPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="70dp" android:layout_marginStart="70dp"
    />
    <TextView
            android:text="@string/registerNowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" app:layout_constraintStart_toEndOf="@+id/textView5"/>
</androidx.constraintlayout.widget.ConstraintLayout>